{
  "name": "@pioneer-sdk/sdk",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "npm": "npm i",
    "npm-update": "npm update",
    "test": "npm run build && node __tests__/test-module.js",
    "test-ts": "rm -R lib && npm run build && ts-node __tests__/test-module-ts.ts",
    "lint": "prettier --write '**/**/*.ts'",
    "start": "nodemon --watch 'src/**/*.ts' --exec ts-node __tests__node",
    "build": "tsc -p .",
    "build:watch": "npm run build && onchange 'src/**/*.ts' -- npm run build",
    "prepublish": "npm run build",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "test-jest": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "view:coverage": "serve coverage/lcov-report",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map lib node_modules"
  },
  "dependencies": {
    "@pioneer-platform/pioneer-client": "^8.1.24",
    "@pioneer-platform/pioneer-coins": "^8.1.44",
    "@pioneer-platform/pioneer-events": "^8.1.30",
    "@pioneer-platform/pioneer-invoke": "^8.1.35",
    "@shapeshiftoss/hdwallet-core": "^1.22.0",
    "@shapeshiftoss/hdwallet-keepkey": "^1.22.0",
    "@shapeshiftoss/hdwallet-keepkey-nodewebusb": "^1.22.0",
    "@shapeshiftoss/hdwallet-keepkey-webusb": "^1.22.0",
    "@types/google-protobuf": "^3.15.6",
    "@types/usb": "^2.0.5",
    "google-protobuf": "^3.20.1",
    "keccak256": "^1.0.6",
    "onchange": "^7.1.0",
    "rango-sdk": "^0.0.4",
    "typescript": "4.6.4",
    "web3-utils": "^1.7.3"
  }
}
